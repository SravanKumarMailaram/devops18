pipeline {
    agent any
    stages {
        stage('InfraCode') {
            steps {
                git branch: 'main', url: 'https://github.com/SravanKumarMailaram/devops18.git'
            }
        }
        stage ("Init") {
            steps {
                sh 'echo -e "yes\n" | terraform init'
        }
    }
    stage ("Plan") {
        steps {
            sh 'terraform plan'
        }
    }
    stage ("Action") {
        steps {
            sh 'terraform $action --auto-approve'
        }
    }
    stage ("Deploy") {
        steps {
            sh 'ansible-playbook -i /opt/ansible/inventory/aws_ec2.yml /var/lib/jenkins/workspace/MyDeployment/ansible/deployment.yml'
        }
    }
}
}
